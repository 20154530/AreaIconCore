<yt:YT_Window x:Class="AreaIconCore.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:yt="clr-namespace:YControls;assembly=YControls"
              xmlns:model="clr-namespace:AreaIconCore.Models"
              xmlns:service="clr-namespace:AreaIconCore.Services"
              xmlns:setting="clr-namespace:YFrameworkBase.Setting;assembly=YFrameworkBase"
              xmlns:local="clr-namespace:AreaIconCore"
              DragingMode="FullWindow"
              Background="Transparent"
              ExtendToTitleBar="True"
              mc:Ignorable="d"
              Title="MainWindow"
              Height="400"
              Width="640">
    <Grid Background="#80000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ListView x:Name="ListV">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type model:ExtensionInfo}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <!--<TextBox Text="{Binding}"
                                 Margin="4,0,4,0"
                                 Grid.Column="0" />-->
                        <TextBox Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                 Margin="4,0,4,0"
                                 Grid.Column="1" />
                        <TextBox Text="{Binding Enabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                 Margin="4,0,4,0"
                                 Grid.Column="2" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Click="Button_Click">Save</Button>
            <Button Click="Button_Click_1"
                    Grid.Column="1">Show</Button>
            <Button Click="Button_Click_2" Grid.Column="2">Close</Button>
        </Grid>
    </Grid>
</yt:YT_Window>
