        <Setter Property="Width"
                Value="248" />
        <Setter Property="Height"
                Value="124" />
    </Style>
    <!--#endregion-->

    <!--#region                                                         CollectionControls-->
    <Style x:Key="SettingPageExtensionComboBox"
           TargetType="ComboBox">
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Grid x:Name="rgrid">
                                    <ContentPresenter x:Name="Content"
                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                      Margin="0" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="rgrid"
                                                Property="Background"
                                                Value="{DynamicResource SettingItem_ComboboxItem_Bg_O}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter TargetName="rgrid"
                                                Property="Background"
                                                Value="{DynamicResource SettingItem_ComboboxItem_Bg_P }" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock x:Name="TextHolder"
                               Text="{Binding}"
                               Style="{StaticResource SettingItemComboboxItem}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid x:Name="rgrid"
                          SnapsToDevicePixels="True">
                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               Placement="Bottom">
                            <Grid MaxHeight="120"
                                  Background="{DynamicResource MainTheme_Bg}">
                                <yt_slide:YT_ScrollViewer x:Name="DropDownScrollViewer"
                                                          ScrollbarLayout="Dock"
                                                          ScrollbarThickness="4"
                                                          HorizontalScrollBarVisibility="Disabled"
                                                          Style="{StaticResource DefaultScrollViewer}">
                                    <Grid RenderOptions.ClearTypeHint="Enabled">
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Grid>
                                </yt_slide:YT_ScrollViewer>
                            </Grid>
                        </Popup>
                        <yt_button:FIconToggleButton x:Name="SwitchButton"
                                                     LabelMargin="8,4"
                                                     IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent},Mode=TwoWay}"
                                                     LabelSelect="{Binding SelectedItem,RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                     LabelString="{Binding SelectedItem,RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                     Style="{StaticResource SettingItemSliderToggelButton}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ExtensionPageExtensionList"
           TargetType="ListView">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="ScrollViewer.CanContentScroll"
                Value="False" />
        <Setter Property="SelectionMode"
                Value="Single" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin"
                            Value="0,0,0,8" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Grid x:Name="rgrid"
                                      RenderTransformOrigin=".5 .5"
                                      Background="{DynamicResource ExtensionItem_Bg_N}">
                                    <Grid.RenderTransform>
                                        <ScaleTransform x:Name="rgrid_ScaleTransform"
                                                        ScaleX="1"
                                                        ScaleY="1" />
                                    </Grid.RenderTransform>
                                    <ContentPresenter x:Name="Content"
                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                      Margin="0" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="rgrid_ScaleTransform"
                                                                                   Storyboard.TargetProperty="ScaleX">
                                                        <SplineDoubleKeyFrame KeyTime="0:0:0.1"
                                                                              KeySpline="0.5,0 1,0.2"
                                                                              Value=".98" />
                                                    </DoubleAnimationUsingKeyFrames>
                                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="rgrid_ScaleTransform"
                                                                                   Storyboard.TargetProperty="ScaleY">
                                                        <SplineDoubleKeyFrame KeyTime="0:0:0.1"
                                                                              KeySpline="0.5,0 1,0.2"
                                                                              Value=".98" />
                                                    </DoubleAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="rgrid_ScaleTransform"
                                                                                   Storyboard.TargetProperty="ScaleX">
                                                        <SplineDoubleKeyFrame KeyTime="0:0:0.1"
                                                                              KeySpline="0.5,0 1,0.2"
                                                                              Value="1" />
                                                    </DoubleAnimationUsingKeyFrames>
                                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="rgrid_ScaleTransform"
                                                                                   Storyboard.TargetProperty="ScaleY">
                                                        <SplineDoubleKeyFrame KeyTime="0:0:0.1"
                                                                              KeySpline="0.5,0 1,0.2"
                                                                              Value="1" />
                                                    </DoubleAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                        <Setter TargetName="rgrid"
                                                Property="Background"
                                                Value="{DynamicResource ExtensionItem_Bg_O}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <control:ExtensionItem ExtensionKey="{Binding}"
                                           Background="Transparent"
                                           Style="{StaticResource DefaultExtensionItem}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="true">
                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

</ResourceDictionary>