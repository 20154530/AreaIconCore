<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:yt_button="clr-namespace:YControls.FontIconButtons;assembly=YControls"
                    xmlns:yt_flow="clr-namespace:YControls.FlowControls;assembly=YControls"
                    xmlns:yt_slide="clr-namespace:YControls.SlideControls;assembly=YControls"
                    xmlns:yt_wx="clr-namespace:YControls.WinXStyleControls;assembly=YControls"
                    xmlns:yt_conv="clr-namespace:YControls.Converters;assembly=YControls"
                    xmlns:yt_dialog="clr-namespace:YControls.Dialogs;assembly=YControls"
                    xmlns:ct="clr-namespace:ExtensionContract;assembly=ExtensionContract"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:control="clr-namespace:AreaIconCore.Controls"
                    xmlns:app="clr-namespace:AreaIconCore">
    <!--#region                                                         Icons-->
    <sys:String x:Key="Icon_MainPage">&#xE80F;</sys:String>
    <sys:String x:Key="Icon_SettingPage">&#xE713;</sys:String>
    <sys:String x:Key="Icon_ExtensionPage">&#xE74C;</sys:String>
    <sys:String x:Key="Icon_AboutPage">&#xE8F2;</sys:String>

    <!--#endregion-->

    <!--#region                                                         SizeConfig-->
    <sys:Double x:Key="WXnotifypopupwidth">364</sys:Double>
    <sys:Double x:Key="MessagePopupWidth">288</sys:Double>
    <sys:Double x:Key="DefaultSliderThumb_Size">8</sys:Double>
    <sys:Double x:Key="TitleBarMinHeight">28</sys:Double>
    <sys:Double x:Key="DefaultSlider_TrackThickness">2</sys:Double>
    <Thickness x:Key="MainBorderThickness"
               Left="1"
               Right="1"
               Top="1"
               Bottom="1" />

    <!--#endregion-->

    <!--#region                                                         ConvertArgs-->

    <yt_conv:StringConverterArgs x:Key="NavigaterToolTipText"
                                 Format="Label_ToolTipStyle"
                                 FindRes="True"
                                 ResourceDic="{Binding Resources, Source={x:Static app:App.Current}}" />
    
    <yt_conv:StringConverterArgs x:Key="MainOpacityToolTipText"
                                 Format="{}{0:F0}%"
                                 FindRes="False" />
    <!--#endregion-->

    <!--#region                                                         TextBlocks-->

    <!--SettingItemKeyString-->
    <Style x:Key="SettingItemKeyString"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="13" />
        <Setter Property="FontWeight"
                Value="Thin" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Foreground"
                Value="{DynamicResource MainTheme_Fg}" />
        <Setter Property="Margin"
                Value="4,0,0,0" />
    </Style>

    <!--ExtensionKeyString-->
    <Style x:Key="ExtensionKeyString"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="18" />
        <Setter Property="MaxWidth"
                Value="200" />
        <Setter Property="Margin"
                Value="8,2,0,0" />
        <Setter Property="TextTrimming"
                Value="CharacterEllipsis" />
        <Setter Property="FontWeight"
                Value="UltraLight" />
        <Setter Property="TextAlignment"
                Value="Left" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Top" />
        <Setter Property="Foreground"
                Value="{DynamicResource ExtensionItem_Fg_N}" />
    </Style>

    <!--ExtensionDescription-->
    <Style x:Key="ExtensionDescription"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="10.6" />
        <Setter Property="MaxWidth"
                Value="200" />
        <Setter Property="MaxHeight"
                Value="40" />
        <Setter Property="Margin"
                Value="8,0,0,2" />
        <Setter Property="TextWrapping"
                Value="Wrap" />
        <Setter Property="TextTrimming"
                Value="CharacterEllipsis" />
        <Setter Property="FontWeight"
                Value="Thin" />
        <Setter Property="FontStretch"
                Value="UltraExpanded" />
        <Setter Property="TextAlignment"
                Value="Left" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Foreground"
                Value="{DynamicResource ExtensionItem_Fg_N}" />
    </Style>

    <!--SettingItemComboboxItem-->
    <Style x:Key="SettingItemComboboxItem"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="10.8" />
        <Setter Property="FontWeight"
                Value="Thin" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Foreground"
                Value="{DynamicResource MainTheme_Fg}" />
        <Setter Property="Margin"
                Value="8,4" />
    </Style>

    <!--MessageStringFormat-->
    <Style x:Key="MessageStringFormat"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="10.6" />
        <Setter Property="Margin"
                Value="8" />
        <Setter Property="MaxWidth"
                Value="128" />
        <Setter Property="TextAlignment"
                Value="Left" />
        <Setter Property="TextWrapping"
                Value="Wrap" />
        <Setter Property="FontWeight"
                Value="Thin" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Foreground"
                Value="{DynamicResource ExtensionItem_Fg_N}" />
    </Style>

    <!--#endregion-->

    <!--#region                                                         ButtonStyles-->

    <!--CloseButton-->
    <Style x:Key="CloseButton"
           TargetType="yt_button:FIconButton">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="LabelVisibility"
                Value="Collapsed" />
        <Setter Property="ToolTipString"
                Value="{DynamicResource Label_CloseButton}" />
        <Setter Property="FontSize"
                Value="16" />
        <Setter Property="Content"
                Value="&#xE8BB;" />
        <Setter Property="IconMargin"
                Value="8,2" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />

        <Setter Property="IconFgNormal"
                Value="{DynamicResource TitleBarButton_IconFg_N}" />
        <Setter Property="IconFgOver"
                Value="{DynamicResource TitleBarButton_IconFg_O}" />
        <Setter Property="IconFgPressed"
                Value="{DynamicResource TitleBarButton_IconFg_P}" />

        <Setter Property="IconBgNormal"
                Value="{DynamicResource TitleBarButton_IconBg_N}" />
        <Setter Property="IconBgOver"
                Value="{DynamicResource TitleBarButton_IconBg_O}" />
        <Setter Property="IconBgPressed"
                Value="{DynamicResource TitleBarButton_IconBg_P}" />
    </Style>

    <!--SettingPageSaveButton-->
    <Style x:Key="SettingPageSaveButton"
           TargetType="yt_button:FIconButton">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="IconVisibility"
                Value="Collapsed" />
        <Setter Property="LabelString"
                Value="{DynamicResource SettingPage_Save}" />
        <Setter Property="LabelFontSize"
                Value="10.6" />
        <Setter Property="Margin"
                Value="4,4" />
        <Setter Property="LabelHorizontalAlignment"
                Value="Center" />
        <Setter Property="Width"
                Value="108" />
        <Setter Property="Height"
                Value="32" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />

        <Setter Property="LabelFgNormal"
                Value="{DynamicResource SettingPageBottomButton_IconFg_N}" />
        <Setter Property="LabelFgOver"
                Value="{DynamicResource SettingPageBottomButton_IconFg_O}" />
