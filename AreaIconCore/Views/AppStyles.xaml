    <!--SettingItemSliderToggelButton-->
    <Style x:Key="SettingItemSliderToggelButton"
           TargetType="yt_button:FIconToggleButton">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="IconVisibility"
                Value="Collapsed" />
        <Setter Property="LabelFontSize"
                Value="12" />
        <Setter Property="LabelMargin"
                Value="0,4" />

        <Setter Property="LabelFgNormal"
                Value="{DynamicResource TitleBarButton_IconFg_N}" />
        <Setter Property="LabelFgOver"
                Value="{DynamicResource TitleBarButton_IconFg_O}" />
        <Setter Property="LabelFgPressed"
                Value="{DynamicResource TitleBarButton_IconFg_P}" />

        <Setter Property="LabelBgNormal"
                Value="{DynamicResource TitleBarButton_IconBg_N}" />
        <Setter Property="LabelBgOver"
                Value="{DynamicResource TitleBarButton_IconBg_O}" />
        <Setter Property="LabelBgPressed"
                Value="{DynamicResource TitleBarButton_IconBg_P}" />

        <Setter Property="LabelSelectFgNormal"
                Value="{DynamicResource TitleBarButton_IconFg_S}" />
        <Setter Property="LabelSelectFgOver"
                Value="{DynamicResource TitleBarButton_IconFg_SO}" />
        <Setter Property="LabelSelectFgPressed"
                Value="{DynamicResource TitleBarButton_IconFg_SP}" />

        <Setter Property="LabelSelectBgNormal"
                Value="{DynamicResource TitleBarButton_IconBg_S}" />
        <Setter Property="LabelSelectBgOver"
                Value="{DynamicResource TitleBarButton_IconBg_SO}" />
        <Setter Property="LabelSelectBgPressed"
                Value="{DynamicResource TitleBarButton_IconBg_SP}" />
    </Style>

    <!--SettingItemToggelSwitch-->
    <Style x:Key="SettingItemToggelSwitch"
           TargetType="yt_wx:YT_WinXToggelSwitch">
        <Setter Property="Foreground"
                Value="{DynamicResource TitleBarButton_IconFg_N}" />
        <Setter Property="ForegroundPressed"
                Value="{DynamicResource TitleBarButton_IconFg_O}" />
        <Setter Property="Background"
                Value="{DynamicResource TitleBarButton_IconBg_S}" />
        <Setter Property="BackgroundPressed"
                Value="{DynamicResource TitleBarButton_IconBg_SO}" />
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="ToggelThickness"
                Value="2" />
        <Setter Property="ThumbPadding"
                Value="1" />
        <Setter Property="LabelWidth"
                Value="24" />
        <Setter Property="Height"
                Value="24" />
        <Setter Property="Width"
                Value="64" />
        <Setter Property="ToggelWidth"
                Value="36" />
        <Setter Property="HorizontalContentAlignment"
                Value="Right" />
        <Setter Property="LabelMargin"
                Value="0,0,8,0" />
        <Setter Property="LabelRight"
                Value="False" />
    </Style>

    <!--#endregion-->

    <!--#region                                                         UserControls-->
    <!--DefaultSettingItem-->
    <Style x:Key="DefaultSettingItem"
           TargetType="control:SettingItem">
        <Setter Property="Height"
                Value="32" />
        <Setter Property="Padding"
                Value="8,0" />
        <Setter Property="IDnormal"
                Value="{DynamicResource SettingItem_ID_Normal}" />
        <Setter Property="IDactived"
                Value="{DynamicResource SettingItem_ID_Actived}" />
        <Setter Property="IDmargin"
                Value="0,4" />
        <Setter Property="IDthickness"
                Value="3" />
        <Setter Property="SettingKeyTemplate"
                Value="{StaticResource SettingItemKeyString}" />
    </Style>

    <!--DefaultExtensionItem-->
    <Style x:Key="DefaultExtensionItem"
           TargetType="control:ExtensionItem">
        <Setter Property="Height"
                Value="64" />
        <Setter Property="Padding"
                Value="8,0" />
        <Setter Property="IDnormal"
                Value="{DynamicResource ExtensionItem_ID_Normal}" />
        <Setter Property="IDactived"
                Value="{DynamicResource ExtensionItem_ID_Actived}" />
        <Setter Property="IDthickness"
                Value="6" />
        <Setter Property="SettingKeyTemplate"
                Value="{StaticResource ExtensionKeyString}" />
        <Setter Property="ExtensionDescriptionStyle"
                Value="{StaticResource ExtensionDescription}" />
    </Style>
    <!--#endregion-->

    <!--#region                                                         ScrollViewer-->
    <Style x:Key="DefaultScrollThumb"
           TargetType="yt_slide:YT_Thumb">
        <Setter Property="StrokeThickness"
                Value="{DynamicResource DefaultScrollViewerThumb_StrokeThickness}" />
        <Setter Property="IconFgNormal"
                Value="{DynamicResource DefaultScrollViewerThumb_IconFg_N}" />
        <Setter Property="IconFgOver"
                Value="{DynamicResource DefaultScrollViewerThumb_IconFg_O}" />
        <Setter Property="IconFgPressed"
                Value="{DynamicResource DefaultScrollViewerThumb_IconFg_P}" />

        <Setter Property="IconBgNormal"
                Value="{DynamicResource DefaultScrollViewerThumb_IconBg_N}" />
        <Setter Property="IconBgOver"
                Value="{DynamicResource DefaultScrollViewerThumb_IconBg_O}" />
        <Setter Property="IconBgPressed"
                Value="{DynamicResource DefaultScrollViewerThumb_IconBg_P}" />
    </Style>

    <Style x:Key="DefaultScrollViewer"
           TargetType="yt_slide:YT_ScrollViewer">
        <Setter Property="ScrollbarThickness"
                Value="{DynamicResource DefaultScrollViewer_ScrollbarThickness}" />
        <Setter Property="ScrollbarMiniThickness"
                Value="{DynamicResource DefaultScrollViewer_ScrollbarMiniThickness}" />
        <Setter Property="HorizontalScrollBarStyle">
            <Setter.Value>
                <Style TargetType="yt_slide:YT_Scrollbar">
                    <Setter Property="ThumbHorizontal"
                            Value="{StaticResource DefaultScrollThumb}" />
                    <Setter Property="ThumbVertival"
                            Value="{StaticResource DefaultScrollThumb}" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalScrollBarStyle">
            <Setter.Value>
                <Style TargetType="yt_slide:YT_Scrollbar">
                    <Setter Property="ThumbHorizontal"
                            Value="{StaticResource DefaultScrollThumb}" />
                    <Setter Property="ThumbVertival"
                            Value="{StaticResource DefaultScrollThumb}" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

    <!--#region                                                         Slider-->
    <ControlTemplate x:Key="DefaultSettingPageSlider_RepeatButton"
                     TargetType="RepeatButton">
        <Grid>
            <Rectangle Fill="{TemplateBinding Background}"
                       Height="{StaticResource DefaultSlider_TrackThickness}"
                       RadiusX="1"
                       RadiusY="1" />
        </Grid>
    </ControlTemplate>
    <Style x:Key="DefaultSettingPageSlider_DecButton"
           TargetType="RepeatButton">
        <Setter Property="Background"
                Value="{DynamicResource DefaultSliderThumb_Track_D}" />
        <Setter Property="Template"
                Value="{StaticResource DefaultSettingPageSlider_RepeatButton}" />
    </Style>
    <Style x:Key="DefaultSettingPageSlider_IncButton"
           TargetType="RepeatButton">
        <Setter Property="Background"
                Value="{DynamicResource DefaultSliderThumb_Track_I}" />
        <Setter Property="Template"
                Value="{StaticResource DefaultSettingPageSlider_RepeatButton}" />
    </Style>
    <Style x:Key="DefaultSettingPageSlider_Thumb"
           TargetType="yt_slide:YT_Thumb">
        <Setter Property="Width"
                Value="{StaticResource DefaultSliderThumb_Size}" />
        <Setter Property="Height"
                Value="{StaticResource DefaultSliderThumb_Size}" />
        <Setter Property="IconMode"
                Value="Ellipse" />
        <Setter Property="StrokeThickness"
                Value="1.6" />
        <Setter Property="IconFgNormal"
                Value="{DynamicResource DefaultSliderThumb_IconFg_N}" />
        <Setter Property="IconFgOver"
                Value="{DynamicResource DefaultSliderThumb_IconFg_O}" />
        <Setter Property="IconFgPressed"
                Value="{DynamicResource DefaultSliderThumb_IconFg_P}" />
        <Setter Property="IconBgNormal"
                Value="{DynamicResource DefaultSliderThumb_IconBg_N}" />
        <Setter Property="IconBgOver"
                Value="{DynamicResource DefaultSliderThumb_IconBg_O}" />
        <Setter Property="IconBgPressed"
                Value="{DynamicResource DefaultSliderThumb_IconBg_P}" />
    </Style>
    <Style x:Key="DefaultSettingPageSlider"
           TargetType="yt_slide:YT_Slider">
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Orientation"
                Value="Horizontal" />
        <Setter Property="DecreaseButtonHorizontal"
                Value="{StaticResource DefaultSettingPageSlider_DecButton}" />
        <Setter Property="IncreaseButtonHorizontal"
                Value="{StaticResource DefaultSettingPageSlider_IncButton}" />
        <Setter Property="ThumbHorizontal"
                Value="{StaticResource DefaultSettingPageSlider_Thumb}" />
    </Style>
    <!--#endregion-->

    <!--#region                                                         Popup-->

    <!--AreaPopup-->
    <Style x:Key="AreaPopup"
           TargetType="yt_flow:YT_PopupBase">
        <Setter Property="AllowsTransparency"
                Value="True" />
        <Setter Property="RelativeMode"
                Value="RightBottom" />
        <Setter Property="Placement"
                Value="RelativePoint" />
        <Setter Property="PlacementTarget"
                Value="{x:Null}" />
        <Setter Property="AutoHide"
                Value="True" />
        <Setter Property="AutoHideDelay"
                Value="5000" />
        <Setter Property="RelativeRect"
                Value="16,12" />
        <Setter Property="Message"
                Value="False" />
        <Setter Property="Width"
                Value="{StaticResource WXnotifypopupwidth}" />
    </Style>

    <!--MessageTextPopup-->
    <Style x:Key="MessageTextPopup"
           TargetType="yt_flow:YT_PopupBase">
        <Setter Property="AllowsTransparency"
                Value="True" />
        <Setter Property="RelativeMode"
                Value="RightBottom" />
        <Setter Property="Placement"
                Value="RelativePoint" />
        <Setter Property="AutoHide"
                Value="True" />
        <Setter Property="AutoHideDelay"
                Value="4000" />
        <Setter Property="RelativeRect"
                Value="18,14" />
        <Setter Property="RelativeRectToTarget"
                Value="4,4" />
        <Setter Property="Message"
                Value="True" />
        <Setter Property="EnableBlur"
                Value="True" />
    </Style>
        
    <!--#endregion-->

    <!--#region                                                         ContextMenu-->
    <!--AreaContextMenuSeperator-->
    <Style x:Key="AreaContextMenuSeperator"
           TargetType="{x:Type Separator}">
        <Setter Property="Margin"
                Value="4,1" />
        <Setter Property="Focusable"
                Value="false" />
        <Setter Property="Background"
                Value="#808080" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            Height="1"
                            SnapsToDevicePixels="true" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AreaContextMenu_ShowMainWindow"
           BasedOn="{StaticResource WinXTaskBarContextMenuItemStyle}"
           TargetType="yt_flow:YT_MenuItem">
        <Setter Property="LabelString"
                Value="{DynamicResource AICM_ShowMainWindow}" />
        <Setter Property="CommandParameter"
                Value="Show" />
        <Setter Property="Command"
                Value="{Binding AreaContextMenuCommands,Source={StaticResource MainWindowViewModel}}" />
    </Style>

    <Style x:Key="AreaContextMenu_Setting"
           BasedOn="{StaticResource WinXTaskBarContextMenuItemStyle}"
           TargetType="yt_flow:YT_MenuItem">
        <Setter Property="LabelString"
                Value="{DynamicResource AICM_Setting}" />
        <Setter Property="CommandParameter"
                Value="Setting" />
        <Setter Property="Command"
                Value="{Binding AreaContextMenuCommands,Source={StaticResource MainWindowViewModel}}" />
    </Style>

    <Style x:Key="AreaContextMenu_Exit"
           BasedOn="{StaticResource WinXTaskBarContextMenuItemStyle}"
           TargetType="yt_flow:YT_MenuItem">
        <Setter Property="LabelString"
                Value="{DynamicResource AICM_Exit}" />
        <Setter Property="CommandParameter"
                Value="Exit" />
        <Setter Property="Command"
                Value="{Binding AreaContextMenuCommands,Source={StaticResource MainWindowViewModel}}" />
    </Style>

    <!--#endregion-->

    <!--#region                                                         Dialog-->
