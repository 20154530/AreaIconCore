        <Setter Property="IconMargin"
                Value="8,6" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />

        <Setter Property="IconFgNormal"
                Value="{DynamicResource EnsureDialogBotton_Fg_N}" />
        <Setter Property="IconFgOver"
                Value="{DynamicResource EnsureDialogBotton_Fg_O}" />
        <Setter Property="IconFgPressed"
                Value="{DynamicResource EnsureDialogBotton_Fg_P}" />

        <Setter Property="IconBgNormal"
                Value="{DynamicResource EnsureDialogBotton_Bg_N}" />
        <Setter Property="IconBgOver"
