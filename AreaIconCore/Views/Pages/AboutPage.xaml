<Page x:Class="AreaIconCore.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:yt_text="clr-namespace:YControls.TextControls;assembly=YControls"
      xmlns:manager="clr-namespace:AreaIconCore.Services"
      xmlns:local="clr-namespace:AreaIconCore.Views.Pages"
      mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="0,24"
                    DataContext="{Binding LanguageRes, Source={x:Static manager:LanguageManager.Singleton}}">
            <yt_text:YT_TextBox Text="{Binding XPath=MainPage,Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <yt_text:YT_TextBox Text="{Binding XPath=SettingPage,Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <yt_text:YT_TextBox Text="{Binding XPath=ExtensionPage,Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <yt_text:YT_TextBox Text="{Binding XPath=AboutPage,Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <StackPanel Orientation="Horizontal">
                <Button Click="Button_Click">Refresh</Button>
                <Button Click="Button_Click_1">Save</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
